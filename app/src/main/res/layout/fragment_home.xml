<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <Button
        android:id="@+id/profileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_info_foreground"
        android:contentDescription="Profile Button"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="left">
    <!-- Hello Greeting -->

            <!-- Balance Card -->
            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hello, "
                android:textSize="35sp"
                android:fontFamily="arialblack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/balanceCard"
                android:layout_width="350dp"
                android:layout_height="120dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/greetingText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BALANCE "
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/balance_layout"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"/>

    </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/expenseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPENSES"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="14dp" />

            <!-- Daily, Weekly, Monthly Summary -->
            <LinearLayout
                android:id="@+id/filterLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="14dp"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/balanceCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <TextView
                    android:id="@+id/dailyTotalTextView"
                    android:layout_width="32dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Today:"
                    android:textSize="20sp"
                    android:fontFamily="montserrat"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/weeklyTotalTextView"
                    android:layout_width="32dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Week"
                    android:textSize="20sp"
                    android:fontFamily="montserrat"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/monthlyTotalTextView"
                    android:layout_width="32dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Month: "
                    android:textSize="20sp"
                    android:fontFamily="montserrat"
                    android:gravity="center"/>
            </LinearLayout>


    <!-- Recent Transactions Title -->
    <TextView
        android:id="@+id/recentTransactionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Transactions"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="Lucida Console"
        app:layout_constraintTop_toBottomOf="@id/filterLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <!-- RecyclerView for Transactions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recentTransactionsRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/recentTransactionsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp" />
        </LinearLayout>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:contentDescription="Add Expense"
                android:src="@android:drawable/ic_input_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:backgroundTint="@color/purple_200"
                app:fabSize="normal" />


        <!-- Floating Action Button -->

</androidx.constraintlayout.widget.ConstraintLayout>

